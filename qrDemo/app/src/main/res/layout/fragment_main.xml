<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Scan or create a QRcode"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

    <EditText
        android:id="@+id/edti"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="http://www.cs.uwyo.edu"/>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/encodei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Encode"/>

        <Button
            android:id="@+id/encodeii"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Encode Using Integrator"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/scani"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan"/>

        <Button
            android:id="@+id/scanii"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan Using Integrator"/>
    </LinearLayout>

    <TextView
        android:id="@+id/logtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logging:"
        android:textAppearance="?android:attr/textAppearanceMedium"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/logger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>

    </ScrollView>

</LinearLayout>